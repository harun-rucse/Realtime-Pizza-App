<section class="hero py-12">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Are you hungry?</em></h6>
      <h1 class="font-bold text-6xl">Don't wait !</h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2">
      <img src="/img/hero-pizza.png" alt="" />
    </div>
  </div>
</section>
<section class="menu py-12">
  <div class="container mx-auto">
    <h2 class="text-xl font-bold mb-8">All Pizzas</h2>

    <div class="grid grid-cols-4 gap-y-12 gap-x-16">
      <% pizzas.forEach(pizza => {%>
      <div>
        <img class="h-40 mx-auto mb-4" src="/img/<%= pizza.image%>" alt="" />
        <div class="text-center">
          <h2 class="text-lg mb-4"><%= pizza.name%></h2>
          <span class="size px-4 py-1 text-sm rounded-full uppercase"
            ><%= pizza.size%></span
          >

          <div class="flex items-center justify-around mt-6 px-4">
            <span class="font-bold text-lg">à§³<%= pizza.price%></span>
            <button
              data-pizza="<%= JSON.stringify(pizza)%>"
              class="addToCart px-5 py-1 rounded-full"
            >
              <span>+</span>
              <span class="ml-2">Add</span>
            </button>
          </div>
        </div>
      </div>
      <% })%>
    </div>
  </div>
</section>
